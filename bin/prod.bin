#!/bin/bash

if [ -z "$1" ]; then
  echo "Usage: $0 <commit_message>"
  exit 1
fi

echo "Pushing dev to prod"
cp /var/www/html/alter/dev/* /var/www/html/alter

echo "Copying webfiles to repo"
cp /var/www/html/alter/dev/* ./web

echo "Pushing to remote"
git add .
git commit -m "$1"
git push

echo "Done"
